                    <pre>nice guitar</pre>
                            <div>
                                <span>by Ales</span>
                                <span>5 stars</span>
                                <span>03.08.2025-20:13</span>
                            </div>
                        </div>
                        <div class="details-commentblock-comment">
                            <pre>nice guitar</pre>
                            <div>
                                <span>by Ales</span>
                                <span>5 stars</span>
                                <span>03.08.2025-20:13</span>
                            </div>
                        </div>
                    </div>
                    @Html.Partial("UnderTheBridge/Pagination")
                </div>
            </section>
        </main>
