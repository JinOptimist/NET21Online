@using WebPortal.Models.CoffeShop
@model UserComment

@{
    Layout = "CoffeShopPages/PageTest";
}

<div>
    Add Comments
    <form action="/CoffeShop/AddComents" method="post">
        <div>
            @Html.TextBoxFor(x => x.ImgUser, new { placeholder = "Add yor'e img" })
        </div>
        <div>
            @Html.TextBoxFor(x => x.NameUser, new { placeholder = "Add yor'e Name"})
        </div>
