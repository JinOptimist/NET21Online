@using WebPortal.Models.Tourism
@model TourCreationViewModel
@{
    Layout = "_LayoutTourism";
}
@section  Logo {
    Admin Page for Shop
}

<div class="adminpage">
    <form action="/tourism/AddShopItem" method="post">
        <p>Add New Voting on Main Page</p>
        <div class="input-field">
            @Html.TextBoxFor(x => x.TourName, new { placeholder = "Enter tour name" })
            @Html.ValidationMessageFor(x => x.TourName)
        </div>
        <div class="input-field">
            @Html.TextBoxFor(x => x.TourImg, new { placeholder = "Enter URL for tour image"})
            @Html.ValidationMessageFor(x => x.TourImg)
        </div>
        <p>
           You can also select from available Autors
        </p>
        <div class="dropdown-content"> 
            @Html.DropDownListFor(x => x.AuthorId, Model.AllUsers, "-- Select Author --")
            @Html.ValidationMessageFor(x => x.AuthorId)
        </div>
        @Html.ValidationSummary()
        <button>Add</button>
    </form>
</div>