@model WebPortal.Models.NotesIndex.NoteViewModel

@{
    Layout = "_LayoutNotes";
    var categories = ViewBag.Categories as SelectList;
    var tags = ViewBag.Tags as MultiSelectList;
}

<div>
    @using (Html.BeginForm("Add", "Notes", FormMethod.Post))
    {
        <div class="custom_input">
            @Html.LabelFor(x => x.Title)
            @Html.TextBoxFor(x => x.Title, new { placeholder = "Note title", @class = "input" })
            @Html.ValidationMessageFor(x => x.Title)

            @Html.LabelFor(x => x.Description)
            @Html.TextAreaFor(x => x.Description, new { placeholder = "Note description", @class = "input" })
            @Html.ValidationMessageFor(x => x.Description)
        </div>

        <div class="custom_input">
            @Html.LabelFor(x => x.ImageUrl)
            @Html.TextBoxFor(x => x.ImageUrl, new { placeholder = "Note ImageUrl", @class = "input" })
            @Html.ValidationMessageFor(x => x.ImageUrl)
        </div>

        <div class="custom_input">
            @Html.LabelFor(x => x.CategoryId, "Category")
            @Html.DropDownListFor(x => x.CategoryId, categories, "Select category", new { @class = "input" })
            @Html.ValidationMessageFor(x => x.CategoryId)
        </div>

        <div class="custom_input">
            @Html.LabelFor(x => x.TagIds, "Tags")
            @Html.ListBoxFor(x => x.TagIds, tags, new { @class = "input", size = 8 })
            @Html.ValidationMessageFor(x => x.TagIds)
        </div>

        <div class="custom_input">
            <button type="submit" class="custom_input_button">Add</button>
        </div>
    }
</div>