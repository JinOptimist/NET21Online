@using WebPortal.Localizations.Notes
@model WebPortal.Models.Notes.NoteFormViewModel

@{
    Layout = "_LayoutNotes";
}

<div>
    @using (Html.BeginForm("Edit", "Notes", FormMethod.Post))
    {   @Html.Hidden("id", ViewContext.RouteData.Values["id"])
        <div class="custom_input">
            @Html.LabelFor(x => x.Title)
            @Html.TextBoxFor(x => x.Title, new { placeholder = "Note title", @class = "input" })
            @Html.ValidationMessageFor(x => x.Title, "", new { @class = "field-validation-error" })
        </div>

        <div class="custom_input @(ViewData.ModelState["Description"]?.Errors.Count > 0 ? "error" : "")">
            @Html.LabelFor(x => x.Description)
            @Html.TextAreaFor(x => x.Description, new { placeholder = "Note description", @class = "input" })
            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "field-validation-error" })
        </div>

        <div class="custom_input">
            @Html.LabelFor(x => x.ImageUrl)
            @Html.TextBoxFor(x => x.ImageUrl, new { placeholder = "Note ImageUrl", @class = "input" })
            @Html.ValidationMessageFor(x => x.ImageUrl, "", new { @class = "field-validation-error" })
        </div>

        <div class="custom_input">
            @Html.LabelFor(x => x.CategoryId, "Category")
            @Html.DropDownListFor(x => x.CategoryId, Model.CategoryList, "Select category", new { @class = "input" })
            @Html.ValidationMessageFor(x => x.CategoryId, "", new { @class = "field-validation-error" })
        </div>

        <div class="custom_input">
            @Html.LabelFor(x => x.TagIds, "Tags")
            @Html.ListBoxFor(x => x.TagIds, Model.TagList, new { @class = "input", size = 8 })
            @Html.ValidationMessageFor(x => x.TagIds, "", new { @class = "field-validation-error" })
        </div>

        <div class="custom_input">
            <button type="submit" class="custom_input_button">@Notes.Edit_button_save</button>
        </div>
        <div>
            @Html.ValidationSummary()
        </div>
    }
</div>