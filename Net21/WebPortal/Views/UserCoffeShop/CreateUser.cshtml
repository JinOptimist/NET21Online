@model WebPortal.DbStuff.Models.User

@{
    Layout = "CoffeShopPages/PageTest";
}

<h2>Create User</h2>

<form asp-action="CreateUser" method="post">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="AvatarUrl"></label>
        <input asp-for="AvatarUrl" class="form-control" placeholder="http://..." />
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a class="btn btn-secondary" href="/UserCoffeShop/Users">Back to List</a>
</form>
