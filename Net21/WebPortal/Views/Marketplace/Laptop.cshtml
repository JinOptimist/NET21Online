@model WebPortal.Models.Marketplace.LaptopViewModel

<div class="product-card laptop">
    <img src="@Model.ImageUrl" alt="@Model.Name" class="product-image">
    <div class="product-info">
        <h3>@Model.Name</h3>
        <div class="brand">@Model.Brand</div>
        <div class="price">$@Model.Price.ToString("N2")</div>
        <div class="availability @(Model.IsAvailable ? "in-stock" : "out-of-stock")">
            @(Model.IsAvailable ? "In Stock" : "Out of Stock")
        </div>

        <div class="specs">
            <div class="spec-item"><span class="spec-label">Processor:</span> @Model.Processor</div>
            <div class="spec-item"><span class="spec-label">RAM:</span> @Model.RAM GB</div>
            <div class="spec-item"><span class="spec-label">Storage:</span> @Model.Storage GB</div>
            <div class="spec-item"><span class="spec-label">OS:</span> @Model.OS</div>
            <div class="spec-item"><span class="spec-label">Screen:</span> @Model.ScreenSize"</div>
        </div>
        <button class="add-to-cart">Add to Cart</button>
    </div>
</div>