@model WebPortal.Models.Marketplace.MarketplaceProductAddViewModel

@{
    ViewData["Title"] = "Добавить товар";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Добавить новый товар</h2>
        </div>
        <div class="card-body">
            <form asp-action="Add" method="post" class="needs-validation" novalidate>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ProductType" class="form-label">Тип товара</label>
                            <select asp-for="ProductType" asp-items="@(new SelectList(Model.AvailableProductTypes))"
                                    class="form-select" required>
                                <option value="">-- Выберите тип --</option>
                            </select>
                            <span asp-validation-for="ProductType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Название</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Brand" class="form-label">Бренд</label>
                            <input asp-for="Brand" class="form-control" required />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Цена</label>
                            <div class="input-group">
                                <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                                <span class="input-group-text">₽</span>
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Описание</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">URL изображения</label>
                            <input asp-for="ImageUrl" type="url" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <div class="form-text">Оставьте пустым для изображения по умолчанию</div>
                        </div>
                    </div>
                </div>
                <div id="laptopFields" class="product-specs mt-3 p-3 bg-light rounded" style="display: none;">
                    <h5 class="mb-3"><i class="fas fa-laptop"></i> Характеристики ноутбука</h5>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Processor" class="form-label">Процессор</label>
                            <input asp-for="Processor" class="form-control" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="RAM" class="form-label">Оперативная память (ГБ)</label>
                            <input asp-for="RAM" type="number" class="form-control" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="OS" class="form-label">Операционная система</label>
                            <input asp-for="OS" class="form-control" required />
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save"></i> Сохранить
                    </button>
                    <a href="@Url.Action("Catalog")" class="btn btn-outline-secondary ms-2">
                        <i class="fas fa-times"></i> Отмена
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#ProductType').change(function() {
                $('.product-specs').hide();
                const selectedType = $(this).val();
                if (selectedType) {
                    $(`#${selectedType.toLowerCase()}Fields`).show();
                }
            }).trigger('change');

            // Валидация формы
            $('form').on('submit', function() {
                if (!this.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                $(this).addClass('was-validated');
            });
        });
    </script>
}