@{
    Layout = "_LayoutMarketplace";
}
<body>
    <header>
        <div class="container">
            <div class="header-content">
                <div class="logo">Маркетплейс</div>
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
                <nav>
                    <a href="#">Главная</a>
                    <a href="#">Каталог</a>
                    <a href="#">Войти</a>
                    <a asp-controller="Marketplace" asp-action="Register">Регистрация</a>
                    <a href="#">Корзина</a>
                    <a href="#" class="user-icon"><i class="fas fa-user-circle"></i></a>
                </nav>
            </div>
        </div>
    </header>

    <main class="container">
        <h1>Популярные категории</h1>

        <div class="categories">
            <a href="#" class="category-card">
                <img src="~/images/marketplace/laptop.jpg" alt="Ноутбуки">
                <div class="category-title">Ноутбуки</div>
            </a>

            <a href="#" class="category-card">
                <img src="~/images/marketplace/smartphones.jpg" alt="Смартфоны">
                <div class="category-title">Смартфоны</div>
            </a>

            <a href="#" class="category-card">
                <img src="~/images/marketplace/headpods.jpg" alt="Наушники">
                <div class="category-title">Наушники</div>
            </a>

            <a href="#" class="category-card">
                <img src="~/images/marketplace/smartwatches.jpg" alt="Умные часы">
                <div class="category-title">Умные часы</div>
            </a>
        </div>
    </main>

    <footer>
        <div class="container">
            <p>© 2024 Маркетплейс. Все права защищены.</p>
        </div>
    </footer>
</body>
</html>