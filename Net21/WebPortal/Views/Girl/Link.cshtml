@using WebPortal.Models.Girls
@model LinkGirlViewModel

@{
    Layout = "_LayoutGirl";
}

<div>
    <form action="/girl/link" method="post">
        <div>
            Girls @Html.DropDownListFor(x => x.GirlId, Model.AllGirls)
        </div>
        <div>
            Authors @Html.DropDownListFor(x => x.AuthorId, Model.AllUsers)
        </div>
        <button>Link</button>
    </form>
</div>
