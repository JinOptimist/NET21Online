@using System.Globalization
@using WebPortal.Models.Girls
@using WebPortal.Localizations
@model GirlCreationViewModel

@{
    Layout = "_LayoutGirl";
}

<div>
    <form action="/girl/add" method="post">
        <div>
            @Html.TextBoxFor(x => x.Name, new { placeholder = @Girl.Add_Input_NamePlaceholder, @class = "MyInput" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div>
            @Html.TextBoxFor(x => x.Src, new { placeholder = "Src" })
            @Html.ValidationMessageFor(x => x.Src)
        </div>
        <div>
            @Html.TextBoxFor(x => x.Rating, new { placeholder = "Rating here", @type = "number" })
            @Html.ValidationMessageFor(x => x.Rating)
        </div>
        <div>
            @Html.DropDownListFor(x => x.AuthorId, Model.AllUsers)
            @Html.ValidationMessageFor(x => x.AuthorId)
        </div>
        <div>
            @Html.ValidationSummary()
        </div>
        <button>@Girl.Add_Button_Add</button>
    </form>
</div>
