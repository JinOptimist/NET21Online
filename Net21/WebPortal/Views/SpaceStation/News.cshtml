@using WebPortal.Models.SpaceStation
@model SpaceNewsAddingViewModel

@{
    Layout = "_LayoutSpaceStation";
}

<div class="content">
    <div class="content-wrapper">
        <form action="/SpaceStation/News" method="post" class="news-form">
            <div class="form-group">
                <label for="imageUrl">Image URL:</label>
                <input type="text" id="imageUrl" name="imageUrl" class="news-input" placeholder="Enter image URL">
                @Html.ValidationMessageFor(x => x.ImageUrl)
            </div>
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" class="news-input" placeholder="Enter news title">
                @Html.ValidationMessageFor(x => x.Title)
            </div>
            <div class="form-group">
                <label for="content">Content:</label>
                <textarea id="content" name="content" class="news-textarea" placeholder="Enter news content"></textarea>
                @Html.ValidationMessageFor(x => x.Content)
            </div>
            <divclass ="form-group">
                <label for="author">Author:</label>
                @Html.DropDownListFor(x => x.AuthorId, Model.AllUsers)
                @Html.ValidationMessageFor(x => x.AuthorId)
            </divclass>
            <div>
                @Html.ValidationSummary()
            </div>
            <button type="submit" class="news-button">Add News</button>
        </form>
    </div>
</div>