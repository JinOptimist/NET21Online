@using WebPortal.Models.SpaceStation
@model LinkSpaceNewsViewModel

@{
    Layout = "_LayoutSpaceStation";
}

<div class="content">
    <div class="content-wrapper">
        <form action="/SpaceStation/link" method="post" class="news-form">
            <divclass ="form-group">
                <label for="title">Title:</label>
                SpaceNews @Html.DropDownListFor(x => x.SpaceNewsId, Model.AllSpaceNews)
            </divclass>
            <divclass ="form-group">
                <label for="author">Author:</label>
                Users @Html.DropDownListFor(x => x.AuthorId, Model.AllUsers)
            </divclass>
            <button type="submit" class="news-button">Link</button>
        </form>
    </div>
</div>