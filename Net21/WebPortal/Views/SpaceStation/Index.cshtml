@model List<SpaceNewsModel>
@{
    Layout = "_LayoutSpaceStation";
}

<div class="content">
    <div class="content-wrapper">
            <div class="news-section">
                <h1>Space Station News</h1>
                <div class="news-container">
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var newsItem in Model)
                        {
                            <div class="news-item">
                                <img src="@newsItem.ImageUrl" alt="News image" class="news-image">
                                <div class="news-text">
                                    <h3>@newsItem.Title</h3>
                                    <p>@newsItem.Content</p>
                                    <small>@newsItem.DateAdded.ToString("dd.MM.yyyy")</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="no-news">No news available yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>