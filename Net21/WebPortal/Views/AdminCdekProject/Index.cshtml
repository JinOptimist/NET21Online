        </div>
    }

    <!-- üîç –ü–æ–∏—Å–∫ –∏ —Ñ–∏–ª—å—Ç—Ä–∞—Ü–∏—è -->
    <form asp-controller="AdminCdekProject" asp-action="Index" method="get" class="admincdek-search-form mb-3 d-flex gap-2">
