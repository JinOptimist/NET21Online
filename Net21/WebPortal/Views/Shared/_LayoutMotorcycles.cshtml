@inject WebPortal.Services.IAuthService authService
<!DOCTYPE html>
@using WebPortal.Localizations
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet"
		  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Oswald:wght@400;700&display=swap"
		  rel="stylesheet" />
	<link rel="stylesheet" href="~/css/motorcycles.css" />
	<title>Motosite</title>
</head>
<body>
	<header>
		<menu type="context">
			<div class="logo">
				<img src="/images/motorcycles/logo.png" alt="logo" />
			</div>
			<nav>
				<ul class="main-menu">
                    <li><a href="/">@Motorcycles.Index_Button_WebPortal</a></li>
					<li><a href="/Motorcycles">@Motorcycles.Index_Button_MainMotorcycles</a></li>
					@if (authService.IsAuthenticated())
					{
						<li><a href="/Motorcycles/AddBike">@Motorcycles.Index_Button_AddBike</a></li>
					}
					@if (authService.IsAuthenticated() && authService.GetUser().Role == WebPortal.Enum.Role.Admin)
					{
						<li><a href="/Motorcyclebrandandtype">@Motorcycles.Index_Button_BrendAndType</a></li>
						<li><a href="/Motorcyclebrandandtype/addbrandandtype">@Motorcycles.Index_Button_AddBrendAndType</a></li>
					}
				</ul>
			</nav>
		</menu>
	</header>
	<main>
		@RenderBody()
	</main>
	<footer class="footer">
		<div class="footer-container">
			<div class="footer-column">
				<h3>О компании</h3>
				<p>
					Мотосайт - это сообщество любителей мотоциклов. Мы предоставляем
					информацию, новости и услуги для мотоциклистов.
				</p>
			</div>

			<div class="footer-column">
				<h3>Разделы</h3>
				<ul>
					<li><a href="#">Новости</a></li>
					<li><a href="#">Обзоры</a></li>
					<li><a href="#">Марки мотоциклов</a></li>
					<li><a href="#">Аксессуары</a></li>
					<li><a href="#">Мероприятия</a></li>
				</ul>
			</div>

			<div class="footer-column">
				<h3>Контакты</h3>
				<ul>
					<li>Телефон: +375 (29) 123-45-67</li>
					<li>Email: info@motosite.by</li>
					<li>Адрес: г. Минск, ул. Мотоциклетная, 1</li>
				</ul>

				<div class="footer-social">
					<a href="#"><i class="fab fa-telegram"></i></a>
					<a href="https://www.youtube.com/"><i class="fab fa-youtube"></i></a>
					<a href="#"><i class="fab fa-instagram"></i></a>
				</div>
			</div>
		</div>

		<div class="footer-bottom">
			<p>&copy; 2025 Мотосайт. Все права защищены.</p>
		</div>
	</footer>
</body>
</html>
