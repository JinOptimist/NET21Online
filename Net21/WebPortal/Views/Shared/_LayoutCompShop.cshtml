<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Site by Rostkot_css</title>
    <link rel="stylesheet" href="~/css/Moshko/base_css.css" />
</head>

<body>
    <div class="gradient">
        <div class="title">
            <header class="container">

                <div>
                    <a href="/" class="logo">
                        <img src="~/images/Moshko/logo.png" alt="logo">
                        <h2>COMP SHOP</h2>
                    </a>
                </div>

                <div class="menu">
                    <nav class="menu-list">
                        <ul>
                            <li class="@(Context.Request.Path.ToString().ToLower() == "/compshop" ? "active" : "")"><a href="/CompShop">Главная</a></li>
                            <li><a href="#">О нас</a></li>
                            <li><a href="#">Каталог</a></li>
                            <li><a href="#">Отзывы</a></li>
                            <li><a href="#">Контакты</a></li>
                            <li class="@(Context.Request.Path.ToString().ToLower() == "/compshop/add" ? "active" : "")"><a href="/CompShop/Add">Добавить</a></li>
                        </ul>

                    </nav>
                </div>

                <div class="profile">
                    <img src="~/images/Moshko/profil.png" alt="profil">
                    <span class="nickname">Rostkot_css</span>
                    <div class="dropdown">
                        <ul>
                            <li>Личный кабинет</li>
                            <li>Выйти</li>
                        </ul>
                    </div>
                </div>

            </header>
        </div>

        <hr />

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - WebPortal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

    </div> <!-- gradient -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
