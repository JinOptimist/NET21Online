@inject WebPortal.Services.AuthService authService;

<html>
<head>
    <link rel="stylesheet" href="~/css/tourism.css">
</head>

</html>

<body>
    <div class="topbar-menu">
        <div class="menu">
            <img class="topbar-image" src="~/images/tourism/menu.png" />
            <ul class="menu-dropdown">
                <li><a href="/Tourism/AddContent">Add Photo of User (admin)</a> </li>
                <li><a href="/Tourism/AddShopItem">Add Shop Items of User (admin)</a> </li>
                <li><a href="/Tourism">Main Page</a> </li>
                <li><a href="/">Home Page</a> </li>
