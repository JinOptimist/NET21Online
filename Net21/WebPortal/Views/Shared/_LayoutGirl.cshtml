@using WebPortal.Localizations

<html>
<head>
    <link href="~/css/girl.css?v=1" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", false)
</head>

<body>
    <div class="title">
        <a class="link" href="/">@Girl.Index_Button_MainPage</a>
        <a class="link" href="/Girl">@Girl.Index_Button_Girls</a>
        <a class="link" href="/Girl/Add">@Girl.Index_Button_Add</a>
    </div>

    <div class="not-a-title-blocks">
        <div class="girls-with-maze">
            <div class="content">
                @RenderBody()
            </div>
            <div class="hot-keys">
                <div>
                    <span id="boom" class="hot-key key_active">alt + tab</span>
                    : переключить окно
                </div>
                <div>
                    <span class="hot-key">F5</span>
                    : обновить страничку
                </div>
                <div>
                    <span class="hot-key">ctrl + S</span>
                    : сохранить документ
                </div>
                <div>
                    <span class="hot-key">alt + shift + F</span>
                    : в visual studio Code - авто форматирирование
                </div>
            </div>
        </div>
        <div class="hero-info">HERO</div>
    </div>
</body>
</html>
