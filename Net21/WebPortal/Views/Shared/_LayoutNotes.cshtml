@inject WebPortal.Services.AuthNotesService AuthNotesService

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>Notes</title>
    <link href="~/css/notes.css" rel="stylesheet"/>
</head>
<body>
<div class="header">
    <div class="logo">
        <a href="/Notes">
            <img src="~/images/notes/logo.png" alt="Logo">
            <h1>Notes</h1>
        </a>
    </div>
    <div class="search">
        <input type="text" placeholder="Search">
    </div>
    <div class="profile">
        @if (AuthNotesService.IsAuthenticated())
        {
            <div class="user-info">
                <img src="~/@AuthNotesService.GetUser().AvatarUrl" alt="Avatar">
                <span class="nickname">@AuthNotesService.GetUser().UserName (@AuthNotesService.GetId())</span>
            </div>
            <div class="dropdown">
                <ul>
                    <li>Profile</li>
                    <li>
                        <a asp-area="" asp-controller="AuthNotes" asp-action="logout">Logout</a>
                    </li>
                </ul>
            </div>
        }
        else
        {
            <div class="auth-links">
                <a asp-area="" asp-controller="AuthNotes" asp-action="Login">Login</a>
                <a asp-area="" asp-controller="AuthNotes" asp-action="Registration">Registration</a>
            </div>
            <div class="user-info">
                <img src="~/@AuthNotesService.GetUser().AvatarUrl" alt="Avatar">
                <span class="nickname">@AuthNotesService.GetUser().UserName (@AuthNotesService.GetId())</span>
            </div>
        }
    </div>
</div>
@RenderBody()
<div class="footer">
    <div class="copyright">Copyright 2025 A.Levadniy.</div>
    <div class="contacts">Contact info</div>
</div>
</body>
</html>